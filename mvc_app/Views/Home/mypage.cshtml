
@{
    ViewData["Title"] = "mypage";
}



<div class="container" style="border:solid 1px; margin:2%; padding:2%;">
    <form action="">
        <div class="row">
            <div class="col-sm-4">
                <img src="~/images/formimage.jpg" width="100" height="50" class="center-block" style="margin-top:5%;" />
            </div>
            <div class="col-sm-8">
                <h2 class="text-left">Please fill in the form </h2>
            </div>
        </div>
        <br /><br />

        <div class="row">
            <div class="col-sm-4">
                Name:
            </div>
            <div class="col-sm-8">
                <input type="text" placeholder="Enter name">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4">
                Email:
            </div>
            <div class="col-sm-8">
                <input type="text" placeholder="Enter email" name="email">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4">
                Password:
            </div>
            <div class="col-sm-8">
                <input type="password" placeholder="Enter password" name="password">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4">
                Phone:
            </div>
            <div class="col-sm-8">
                <input type="tel" name="phone" pattern="[0-9]{4}-[0-9]{7}" placeholder="03xx-1212345">
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4">
                Gender:
            </div>
            <div class="col-sm-8">
                <input type="radio" name="gender" value="male"> Male<br>
                <input type="radio" name="gender" value="female"> Female<br>
                <input type="radio" name="gender" value="other"> Other<br>

            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4">
                Birth date:
            </div>
            <div class="col-sm-8">
                <div class="col-8"><input type="date" name="bday"></div>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4">
                Choices:
            </div>
            <div class="col-sm-8">
                <select>
                    <option value="lilies">lilies</option>
                    <option value="roses">roses</option>
                    <option value="fillers">fillers</option>
                </select>

            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-sm-4">
                Comments:
            </div>
            <div class="col-sm-8">
                <div class="col-8"><textarea width=100%;></textarea></div>
            </div>
        </div>
        <br />
        <button class="btn sub-btn center-block">submit</button>
    </form>



</div>


 
