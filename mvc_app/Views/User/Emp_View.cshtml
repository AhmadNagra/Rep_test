@model mvc_app.Models.User

@{
    ViewData["Title"] = "Employee Data Form";
}

<h2>Employee Data Form</h2>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SetEmployeDetail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <label asp-for="Id" class="control-label">Id:</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Name:</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employe_Role" class="control-label">Employe_Role:</label>


                <select class="form-control" id="StudentGender" name="StudentGender">
                    <option value=" " hidden disabled selected>Select Employe Role</option>
                    <option value="HR">HR</option>
                    <option value="Technology Head">Technology Head</option>
                    <option value=" Developer">Developer</option>
                    <option value="QA_Tester ">QA_Tester</option>
                </select>

                <span asp-validation-for="Employe_Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Address:</label>
                <textarea class="form-control"
                          id="Description"
                          name="Description"
                          rows="3"
                          cols="20"></textarea>

                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
            <label asp-for="File" class="control-label">File:</label>
            <input asp-for="File" class="form-control" />
            <span asp-validation-for="File" class="text-danger"></span>
    </div>


    <div class="form-group" action="SetEmployeDetail">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
    </form>
</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
